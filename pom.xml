<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.darwinsys</groupId>
  <artifactId>javasrc</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>javasrc</name>
  <url>http://maven.apache.org</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <build.plugins.plugin.version>1.0.1</build.plugins.plugin.version>
  </properties>

  <build>
	<sourceDirectory>.</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
		<version>2.3.2</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
		<excludes>
			<!-- Won't compile with UTF-8! -->
			<exclude>src/main/java/lang/EuroLanguage.java</exclude>
			<!-- javax.comm API is dead with no replacement; 
			 *** flame Oracle not me!
			 -->
			<exclude>src/main/java/javacomm/*</exclude>
			<exclude>src/main/java/plotter/Penman.java</exclude>
			<!-- Defunct APIs -->
			<exclude>src/main/java/graphics/QTMoviePlayer.java</exclude>

			<!-- Remainder all have 'Expect compile error' -->
			<!-- XXX replace this list with filter grep -->
			<exclude>src/main/java/jdb/Problem.java</exclude>
			<exclude>src/main/java/lang/AddException.java</exclude>
			<exclude>src/main/java/lang/ByteAdd2.java</exclude>
			<exclude>src/main/java/lang/CastingDemo.java</exclude>
			<exclude>src/main/java/lang/ChangeArrayLength.java</exclude>
			<exclude>src/main/java/lang/CommentBug.java</exclude>
			<exclude>src/main/java/lang/CompileError.java</exclude>
			<exclude>src/main/java/lang/ConsRecurs.java</exclude>
			<exclude>src/main/java/lang/Constructors.java</exclude>
			<exclude>src/main/java/lang/ImportConflict.java</exclude>
			<exclude>src/main/java/lang/ImportNonPublic.java</exclude>
			<exclude>src/main/java/lang/InitializersDemo.java</exclude>
			<exclude>src/main/java/lang/InnerMethods.java</exclude>
			<exclude>src/main/java/lang/InterfaceNoConstructor.java</exclude>
			<exclude>src/main/java/lang/NoLocalStatics.java</exclude>
			<exclude>src/main/java/lang/NullStaticMethod.java</exclude>
			<exclude>src/main/java/lang/OverLoadReturn.java</exclude>
			<exclude>src/main/java/lang/PrivProt.java</exclude>
			<exclude>src/main/java/lang/ProtectedClass.java</exclude>
			<exclude>src/main/java/lang/ReturnType.java</exclude>
			<exclude>src/main/java/lang/ShowInitializers.java</exclude>
			<exclude>src/main/java/lang/Switch.java</exclude>
			<exclude>src/main/java/lang/TryStealingInnerClass.java</exclude>
			<exclude>src/main/java/netweb/JScript.java</exclude>
			<exclude>src/main/java/numbers/CastNeeded.java</exclude>
			<exclude>src/main/java/numbers/SmallIntMult.java</exclude>
			<exclude>src/main/java/oo/AllClasses.java</exclude>
			<exclude>src/main/java/oo/Clone0.java</exclude>
			<exclude>src/main/java/oo/SingletonCheat1.java</exclude>
			<exclude>src/main/java/oo/SingletonCheat2.java</exclude>
			<exclude>src/main/java/reflection/ClassLoaderDemo0.java</exclude>
			<exclude>src/main/java/strings/WolfInStringsClothing.java</exclude>
			<exclude>src/main/java/threads/StopStop.java</exclude>
			<exclude>src/main/java/threads/ThreadDeathCatch.java</exclude>
		</excludes>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
	<groupId>com.darwinsys</groupId>
        <artifactId>darwinsys-api</artifactId>
        <version>1.0.1</version>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.1</version>
    </dependency>

    <dependency>
        <groupId>org.mod4j.org.eclipse</groupId>
        <artifactId>swt</artifactId>
        <version>3.5.0</version>
    </dependency>

    <dependency>
        <groupId>org.jdom</groupId>
        <artifactId>jdom</artifactId>
        <version>1.1</version>
    </dependency>

<dependency>
    <groupId>jgoodies</groupId>
    <artifactId>forms</artifactId>
    <version>1.0.5</version>
</dependency>

<dependency>
    <groupId>ant</groupId>
    <artifactId>ant</artifactId>
    <version>1.7.0</version>
</dependency>

  </dependencies>
</project>
